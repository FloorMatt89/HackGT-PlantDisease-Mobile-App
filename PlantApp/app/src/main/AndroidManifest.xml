<?xml version="1.0" encoding="UTF-8"?>
<manifest package="com.matthewsapplication.app" xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" android:largeHeap="true"
        android:name="com.matthewsapplication.app.appcomponents.di.MyApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true" android:theme="@style/Theme.MyApp" android:usesCleartextTraffic="true">
        <activity
            android:name="com.matthewsapplication.app.modules.missionstatement.ui.MissionstatementActivity" android:screenOrientation="portrait"/>
        <activity
            android:name="com.matthewsapplication.app.modules.learn.ui.LearnActivity" android:screenOrientation="portrait"/>
        <activity android:exported="true"
            android:name="com.matthewsapplication.app.modules.welcomeimage.ui.WelcomeimageActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.matthewsapplication.app.modules.indentify.ui.IndentifyActivity" android:screenOrientation="portrait"/>
        <activity
            android:name="com.matthewsapplication.app.modules.mainmenu.ui.MainmenuActivity" android:screenOrientation="portrait"/>
        <activity
            android:name="com.matthewsapplication.app.modules.plantdex.ui.PlantdexActivity" android:screenOrientation="portrait"/>
        <activity
            android:name="com.matthewsapplication.app.modules.grow.ui.GrowActivity" android:screenOrientation="portrait"/>
        <activity
            android:name="com.matthewsapplication.app.modules.camera.ui.CameraActivity" android:screenOrientation="portrait"/>
    </application>
</manifest>
